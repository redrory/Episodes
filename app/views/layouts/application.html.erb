<!DOCTYPE html>
<html>
<head>

  <%= stylesheet_link_tag "application","episodes" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<body class = "login">
	  <div id = "wrapper">
	  <div id="box">

	  <a href = "/"><h1> episodes</h1></a>
	  <h2> track your shows </h2>
	  <div class = "rule"></div>

	  <div id = "user_nav">

	  <% if user_signed_in? %>
	  	 Signed in as <%= current_user.email %>, Not you
	  	| <%= link_to "Sign out", destroy_user_session_path %>

	  <% else %>
	  	<%= link_to "Sign up" %> OR
	  	<%= link_to "Sign in", user_session_path%>

	  <% end %>


	  </div>

		<% flash.each do |name,message| %>
		<%=content_tag :div, message, :id => "flash_#{name}"%>
		<% end %>
		<%= yield %>
	  </div>
	  </div>
</body>
</html>
