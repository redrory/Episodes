<%= form_for @episode do |f|%>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :season, :class => "form_content" %>
	<%= f.number_field :season, :class => "form_content" %>

	<%= f.label :number, :class => "form_content" %>
	<%= f.number_field :number, :class => "form_content"%>
	<%= f.hidden_field :user_id, :value => @user.id%>
	
	<br>
	<%= f.submit %>
<% end %>